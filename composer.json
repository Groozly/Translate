{
    "name": "delfimov/translate",
    "license": "MIT",
    "type": "library",
    "description": "Easy to use i18n translation PHP class for multi-language websites",
    "keywords": ["translate", "language", "plural", "multi-language", "i18n"],

    "homepage": "https://github.com/delfimov/Translate/",

    "authors": [
        {
            "name": "Dmitry Elfimov",
            "email": "elfimov@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "DElfimov\\Translate\\": "./src"
        }
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/delfimov/Translate.git"
    },

    "prefer-stable" : true,

    "require": {
        "php": ">=5.4.0"
    },

    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^6.1"
    },

    "scripts" : {
        "phpcs": "php ./vendor/squizlabs/php_codesniffer/bin/phpcs ./src/Translate.php",
        "test": [
            "php ./vendor/phpunit/phpunit/phpunit --bootstrap src/Translate.php tests/TranslateTest"
        ]
    }


}
